pkgname=discrover
pkgver=1.1.2
pkgrel=1
epoch=
pkgdesc="Binding site pattern discovery from nucleic acid sequences by discriminative learning of hidden Markov models"
arch=('x86_64')
url="https://github.com/maaskola/discrover"
license=('GPL3')
groups=()
depends=('boost' 'texlive-core' 'imagemagick' 'ruby')
makedepends=('cmake' 'gcc' 'boost' 'texlive-core' 'texlive-latexextra' 'imagemagick' 'ruby')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=('strip' 'docs' '!libtool' '!staticlibs')
install=
changelog=
source=(https://github.com/maaskola/discrover/archive/$pkgver.tar.gz)
noextract=()
md5sums=('9a4d7ac1722167b33ab7989a8ac3ab47')

build() {
	cd "$srcdir/$pkgname-$pkgver"
        cmake -DCMAKE_INSTALL_PREFIX=/usr .
#	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
#        make -C $pkgdir/" install
#        make -C $pkgname install
	make DESTDIR="$pkgdir/" install
}
